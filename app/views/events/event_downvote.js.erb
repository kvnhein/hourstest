$('#down<%=@event.id%>').bind('ajax:success', function() {
    $('#event<%=@event.id%>').html('<%=escape_javascript @event.get_upvotes.size.to_s %>');
    $('#like-<%=@event.id%>').html('<%=escape_javascript (render partial: "shared/event_upvote") %>');
    $('.user-points>').html('<%=escape_javascript link_to "Points: #{current_user.experience}" %>');
<%if current_user.experience <= 5 %>
Materialize.toast('Unsaved To Profile (-5 Hours)', 4000)
<%elsif current_user.experience == 10%>
Materialize.toast('Unsaved', 4000)
<%end%>
});