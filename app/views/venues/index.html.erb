<p id="notice"><%= notice %></p>

<h1>Listing Venues</h1>

<table>
  <thead>
    <tr>
      <th class = "text-flow">Name</th>
      <th class = "text-flow">Address</th>
    <!--  <th class = "text-flow">Longitude</th>
      <th class = "text-flow">Latitude</th>-->
      <th class = "text-flow">Neighborhood</th>
      <!--<th>Owner</th>-->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @venues.each do |venue| %>
      <tr>
        <td class = "text-flow"><%= venue.name %></td>
        <td class = "text-flow"><%= venue.address %></td>
       <!-- <td><%= venue.longitude %></td>
        <td><%= venue.latitude %></td>-->
        <td class = "text-flow"><%=Neighborhood.where(id: venue.neighborhood_id).first.name %></td>
       <!-- <td><%= venue.owner %></td>-->
        <td><%= link_to 'Show', venue, class: "waves-effect waves-light btn" %></td>

       <!-- <td><%= link_to 'Edit', edit_venue_path(venue) %></td>
        <td><%= link_to 'Destroy', venue, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
      </tr>
    <% end %>
  </tbody>
</table>

