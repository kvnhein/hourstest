<h5>New Claims</h5>

<table class="striped">
  <thead>
    <tr>
      <th>Decription</th>
      <th>Venue/Event</th>
      <th>User Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @claims.each do |claim| %>
   
      <tr>
        <td><%= claim.description %></td>
        <td><%=claim.event.venue.name%>/ <%=claim.event.special%></td>
        <td><%= @users.select {|user| user.id == claim.user_id}.first.fullname%></td>
        <td><%=claim.created_at.strftime("created on %m/%d/%Y") %> <%=claim.created_at.strftime("at %I:%M%p")%></td>
        <td><%= link_to 'Show', claim %></td>
        <td><%= link_to 'Edit', edit_claim_path(claim) %></td>
        <td><%= link_to 'Destroy', claim, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

