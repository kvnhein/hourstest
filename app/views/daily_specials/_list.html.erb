

<%if @daily_specials.count > 0 %>

<%@daily_specials.today.shuffle.each do |event| %>

<%@j=event%>
<div class="row">
  <div class="col s12 m7">
    <div class="card">
      <div class="card-image">
        <%= image_tag event.image.url(:medium)%>
      </div>
      <div class="card-content">
        <p><%=event.text%><br/>
        <div class = "card-title">
          <%=Venue.where(id: event.venue_id).first.name%>
        </div>
        <br>
        <%= event.description%>
      </div>
      <div class="card-action">
        <div class = "row valign-wrapper">
          <!--<div class = "Left">Available til 10:00 pm</div>-->
     <% @j = event%>
    <div class="col s1 pull-s2">
      <div id = 'like-<%=event.id%>'>
      <% if user_signed_in? %>
        <% if current_user.voted_as_when_voted_for event %>
				<%= render 'downvote'%>
			  <% else %>
				<%= render 'upvote' %>
			<% end %>
    <%else%>
       <%= link_to "Like", new_user_session_path%>
    <%end%>
      </div>
    </div>
<div id='special<%=event.id%>'>
            <%= event.get_likes.size%>
        </div>
    </div>

<div>
    <div class="col s1 pull-s8">

    </div>
<div class = "hide">
          <%= link_to 'Edit', edit_daily_special_path(event) %>
          <%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' }, :remote => true  %>

           <i class="material-icons">share</i>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%end%>
<div class = "hide">
<%= link_to 'New Feature', new_daily_special_path, :id => "feat_dish" %>
</div>
<%end%>
