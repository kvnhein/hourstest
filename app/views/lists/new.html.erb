<div class="detailstitle">
<h2 class = "flow-text">Add Beer to Beer List</h2>
</div>

<div class="form-padding">
<% x = []%>
<% @brews.order('brewery ASC').each do |brew| %>
<%  x.push(brew.brewery)%>
 <% end%>

<ul class="collapsible" data-collapsible="accordion">
<%x.uniq.each do |brewery| %>
    <li>
      <div class="collapsible-header"><%=brewery%> ( <%=@brews.where(brewery: brewery).count%> )</div>
      <div class="collapsible-body">
        <ul class="collapsible" data-collapsible="accordion">
             <%@brews.where(brewery: brewery).order('name ASC').each do |brew| %>
                 <li>
                   <div class="collapsible-header"> <%=brew.name%></div>
                    <div class="collapsible-body">
                     
<%= render 'form' %>
                     </div>
                 </li>
             <%end%>
        </ul>
      </div>
    </li>
  <%end%>
  </ul>

</div>



<%= link_to "Back", @back_url, class: "waves-effect waves-light btn", 'data-no-turbolink' => true %>
