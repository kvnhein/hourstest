	<%modal_event = @event%>
	<% if modal_event.week_verification%>
							<%end%>
								<div class = "verify_button<%=modal_event.id%>">
								<% if Claim.where(event_id: modal_event.id).count == 0%>
									
										<%if user_signed_in? %>
											<%if current_user.can_verify?%>
												<div class="verified-hour" id='verified-<%=modal_event.id%>'><%= render "event_verified"%></div>
											<%else%>
												<div class="verified-hour" id='verified-<%=modal_event.id%>'>
												<button id="show" class="btn-flat disabled tooltipped" data-position="bottom" data-delay="50" data-tooltip="You need to save at least ten of your favorite hours to your profile by liking them before you can verify." >
													<i class="tiny material-icons">update</i>
												</button>
												</div>
											<%end%>
										<%else%>
											<div class="verified-hour">
												<%= link_to new_user_session_path do%>
													<div class = "valign-wrapper" style="text-align:left;">
														<i class="tiny material-icons" style="opacity:0.4">update</i>
														<p>Verify</p>
													</div>
												<%end%>
											</div>
										<%end%>
									<%end%>
									
								</div>