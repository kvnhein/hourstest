<%@first_special_batch.shuffle.each do |event| %>

<div class="row">
  <div class="col s12 m8 offset-m2 featured-dish-section">
    <%= link_to "#{Venue.where(id: event.venue_id).first.name}", venue_path(Venue.where( id: event.venue_id).first.id), class: "btn-flat"%>
    <!--<h6><%=event.created_at.strftime("%B #{event.created_at.day.ordinalize}, %Y")%></h6>-->
    <div class="card">
     <div class="card-image">
        <%= image_tag event.image.url(:medium)%>
     </div>
     <div class="card-content">
       <p><%=event.text%></p>
     </div>
     <div class="card-action">
       <%= event.description%>
         <div class = "hide">
           <%= link_to 'View Profile', venue_path(Venue.where( id: event.venue_id).first.id), class: "waves-effect waves-light btn menubtn", 'data-no-turbolink' => true %>
         </div>
     </div>
      <!-- like buttons -->
     <div class="divider"></div>
       <div class="card-action">
         <br/>
         <%@j = event%>
         <%=render partial: "daily_specials/like_form"%>
       </div>
       <div class="divider"></div>
        <!-- end of like buttons -->
     </div>
     <br/>

    </div>
    </div>


<%end%>




